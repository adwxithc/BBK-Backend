{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "lib": ["es2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@common/*": ["./common/*"]
        },
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "tests"]
}
